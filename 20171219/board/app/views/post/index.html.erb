<h2>게시판입니다.</h2>
<p><a class="btn btn-primary" href="/post/new" role="button">글쓰기</a></p>
<hr />

<table class="table table-bordered table-hover">
  <thead>
    <tr class="bg-danger">
      <th scope="col">id</th>
      <th scope="col">User Name</th>
      <th scope="col">Title</th>
      <th scope="col">Content</th>
      <th scope="col">Time</th>
      <th scope="col">View</th>
      <th scope="col">Delete</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>

    <% @posts.each do |post| %>
    <tr class="bg-warning">
      <th scope="row"><%= post.id %></th>
      <td><%= post.username %></td>
      <td><%= post.title %></td>
      <td><div ><%= post.text %></td>
      <td><%= post.created_at %></td>
      <td><a href="/post/show/<%=post.id%>" style="color:black">View</a></td>
      <td><a href="/post/destroy/<%=post.id%>">Delete</a></td>
      <td><a href="/post/edit/<%=post.id%>">Edit</a></td>
    </tr>
  <% end %>
  </tbody>
</table>
